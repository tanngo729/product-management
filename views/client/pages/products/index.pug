extends ../../layout/default.pug
include ../../mixins/boxhead.pug
block main
  .container 
    .row 
      .col-12 
        +box-head('Danh sách sản phẩm')


    .row 
      each item in products
        .col-4.mb-3 
          .product-item
            .inner-image 
              img(src=item.image alt=item.name)
            .inner-content  
              h3.inner-title
                a(href=`/products/${item.slug}`) #{item.name}
              .inner-price-new #{item.price}$